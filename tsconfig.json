{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "lib",
  ],
}